					{{> button text='Inschrijven' page='register' }}
					{{> button text='Contact' page='contact' }}
				</div>
				<div class="flex flex-col grow">
					<main class="grow">
						{{> content }}
					</main>
					<footer class="h-2 text-center mt-4">
						&copy; 2025 <a href="https://delftschezwervers.nl/">Delftsche Zwervers</a> - <a href="privacy.html">Privacy</a>
