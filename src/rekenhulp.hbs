{{#> layout title='Rekenhulp'}}
	{{#*inline "content"}}
		<form class="w-full">
			{{> helperinput label='Ticket vr-zo ' id='ticket-standard-full' price=80 }}
			{{> helperinput label='Ticket za-zo ' id='ticket-standard-partial' price=70 }}
			{{> helperinput label='Ticket vr-zo (huidig lid of kind 4 t/m 17) ' id='ticket-discount-full' price=60 }}
			{{> helperinput label='Ticket za-zo (huidig lid of kind 4 t/m 17) ' id='ticket-discount-partial' price=50 }}
			{{> helperinput label='Toelage caravan/camper' id='camper-caravan' price=10 }}

			{{> helperinput label='T-shirt' id='shirt' price=18 }}
			{{> helperinput label='Vest/trui' id='hoodie' price=40 }}
			{{> helperinput label='Pin' id='pin' price=5 }}
			{{> helperinput label='Patch' id='patch' price=1.5 }}

			<div class="flex place-content-around mt-6 mb-6">
			    <div class="md:w-1/2">
			    </div>
			    <div class="md:w-1/2">
				<hr />
			    </div>
			</div>

			<div class="flex place-content-around mt-0 mb-10">
			    <div class="md:w-1/2">
			      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4 py-2" for="total">Totaal</label>
			    </div>
			    <div class="md:w-1/2">
			      <input class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight" id="total" name="total" type="number" value="0" disabled>
			    </div>
			</div>
		</form>

		<script language="javascript">
function formUpdateHandler() {
	const total = 
		getValueOrZero('ticket-standard-full') * 80 +
		getValueOrZero('ticket-standard-partial') * 70 +
		getValueOrZero('ticket-discount-full') * 60 +
		getValueOrZero('ticket-discount-partial') * 50 +
		getValueOrZero('camper-caravan') * 10 +

		getValueOrZero('shirt') * 18 +
		getValueOrZero('hoodie') * 40 +
		getValueOrZero('pin') * 5 +
		getValueOrZero('patch') * 1.5;

	document.getElementById('total').value = total;
}

function getValueOrZero(id) {
	const v = document.getElementById(id).value
	return isNaN(v) ? 0 : v;
}
		</script>
	{{/inline}}
{{/layout}}
